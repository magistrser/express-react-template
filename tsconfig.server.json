{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2019",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@server/*": ["src/server/*"],
      "@common/*": ["src/common/*"],
      "@routes/*": ["src/server/routes/*"],
      "@providers/*": ["src/server/providers/*"]
    }
  },
  "include": [
    "src/common",
    "src/server"
  ],
  "exclude": [
    "node_modules",
    "dist-client",
    "dist-server"
  ]
}
